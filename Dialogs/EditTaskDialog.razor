@* EditTaskDialog.razor *@
@if (IsVisible)
{
    <!-- Modal Dialog Container with a higher z-index -->
    <div class="modal show d-block" tabindex="-1" style="z-index: 1050; position: fixed; top: 0; left: 0; right: 0; bottom: 0;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Task</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Start Time</label>
                        @* <input type="time" class="form-control" @bind="StartTime" /> *@
                        <InputDate Type="InputDateType.Time" class="form-control" @bind-Value="StartTime" disabled="true"></InputDate>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">End Time</label>
                        <input type="time" class="form-control" @bind="EndTime" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Task Name</label>
                        <input type="text" class="form-control" @bind="TaskName" />
                    </div>
                    <div>
                        <p class="validation-message">@ValidationErrorMessage</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button class="btn btn-primary" @onclick="Update">Update</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Backdrop with a lower z-index -->
    <div class="modal-backdrop fade show" style="z-index: 1040;"></div>
}
